# Application
PROJECT_NAME=AzureShield IAM
VERSION=1.0.0
API_V1_STR=/api/v1

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_MINUTES=30

# MFA Configuration
MFA_ENABLED=true
MFA_REQUIRED_FOR_ADMIN=true
MFA_BACKUP_CODES_COUNT=8

# OAuth2 Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# IP Restrictions
ALLOWED_IP_RANGES=["10.0.0.0/8","192.168.0.0/16"]
BLOCKED_IPS=[]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Suspicious Activity Detection
IMPOSSIBLE_TRAVEL_THRESHOLD_KM=1000
IMPOSSIBLE_TRAVEL_TIME_HOURS=1
UNUSUAL_TIME_THRESHOLD_HOURS=6

# GeoIP Configuration
GEOIP_DATABASE_PATH=GeoLite2-City.mmdb
GEOIP_FALLBACK_ENABLED=true

# Database
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-password-here
POSTGRES_DB=azureshield_iam
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/azureshield_iam
# Optional Database Pool Settings
DB_ECHO=false
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Azure AD
AZURE_AD_TENANT_ID=your-tenant-id
AZURE_AD_CLIENT_ID=your-client-id
AZURE_AD_CLIENT_SECRET=your-client-secret
AZURE_AD_AUTHORITY=https://login.microsoftonline.com/your-tenant-id

# Email
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAILS_FROM_EMAIL=your-email@gmail.com
EMAILS_FROM_NAME=AzureShield IAM

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Monitoring
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_MULTIPROC_DIR=/tmp

# Session Management
SESSION_EXPIRE_DAYS=30
MAX_CONCURRENT_SESSIONS=5

# Audit Logging
AUDIT_LOG_RETENTION_DAYS=90
AUDIT_LOG_ARCHIVE_DIR=audit_logs
AUDIT_LOG_BATCH_SIZE=100
AUDIT_LOG_PROCESSING_INTERVAL=1
AUDIT_LOG_HASH_ALGORITHM=sha256

# Monitoring
ENABLE_MONITORING=true
MONITORING_INTERVAL=60
METRIC_RETENTION_DAYS=30
ALERT_RETENTION_DAYS=90
HEALTH_CHECK_INTERVAL=300
CRITICAL_METRIC_THRESHOLDS={"cpu_usage": 80.0, "memory_usage": 85.0, "database_response_time": 1.0, "redis_response_time": 0.1}

# Azure Monitor Integration
AZURE_MONITOR_ENABLED=false
AZURE_MONITOR_CONNECTION_STRING=your-connection-string
AZURE_MONITOR_INSTRUMENTATION_KEY=your-instrumentation-key
AZURE_MONITOR_ENDPOINT=your-endpoint

# Application Insights
APPINSIGHTS_ENABLED=false
APPINSIGHTS_INSTRUMENTATION_KEY=your-instrumentation-key
APPINSIGHTS_ENDPOINT=your-endpoint

# Log Analytics
LOG_ANALYTICS_ENABLED=false
LOG_ANALYTICS_WORKSPACE_ID=your-workspace-id
LOG_ANALYTICS_PRIMARY_KEY=your-primary-key
LOG_ANALYTICS_ENDPOINT=your-endpoint

# Scalability
ENABLE_ASYNC_PROCESSING=true
MAX_WORKERS=4
WORKER_TIMEOUT=300
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=1800
REDIS_POOL_SIZE=10
REDIS_POOL_TIMEOUT=20
CACHE_TTL=300
CACHE_PREFIX=azureshield:

# High Availability
ENABLE_CIRCUIT_BREAKER=true
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60
ENABLE_GRACEFUL_SHUTDOWN=true
SHUTDOWN_TIMEOUT=30
HEALTH_CHECK_TIMEOUT=5
MAX_RETRIES=3
RETRY_DELAY=1

# Background Tasks
ENABLE_BACKGROUND_TASKS=true
MAX_BACKGROUND_TASKS=10
BACKGROUND_TASK_TIMEOUT=300
TASK_QUEUE_SIZE=1000

# Development
DEBUG=False # Set to True for development debugging 